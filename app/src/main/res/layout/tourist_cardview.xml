<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/normal_100"
    app:cardCornerRadius="@dimen/normal_100"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/normal_100">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_22"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <ImageButton
            android:id="@+id/button"
            android:background="@drawable/button_tourist_background"
            android:layout_width="@dimen/normal_200"
            android:layout_height="@dimen/normal_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/touristLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/button">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutName"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/light_gray"
                android:layout_marginTop="@dimen/normal_100"
                app:boxCornerRadiusTopEnd="@dimen/normal_100"
                app:boxCornerRadiusBottomStart="@dimen/normal_100"
                app:boxCornerRadiusBottomEnd="@dimen/normal_100"
                app:boxCornerRadiusTopStart="@dimen/normal_100"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textColorHint="@color/gray"
                    android:hint="@string/name"
                    app:errorEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSurname"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/light_gray"
                android:layout_marginTop="@dimen/normal_100"
                app:boxCornerRadiusTopEnd="@dimen/normal_100"
                app:boxCornerRadiusBottomStart="@dimen/normal_100"
                app:boxCornerRadiusBottomEnd="@dimen/normal_100"
                app:boxCornerRadiusTopStart="@dimen/normal_100"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textColorHint="@color/gray"
                    android:hint="@string/surname"
                    app:errorEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutBirthday"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/light_gray"
                android:layout_marginTop="@dimen/normal_100"
                app:boxCornerRadiusTopEnd="@dimen/normal_100"
                app:boxCornerRadiusBottomStart="@dimen/normal_100"
                app:boxCornerRadiusBottomEnd="@dimen/normal_100"
                app:boxCornerRadiusTopStart="@dimen/normal_100"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textColorHint="@color/gray"
                    android:hint="@string/birthday"
                    app:errorEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutÐ¡itizenship"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/light_gray"
                android:layout_marginTop="@dimen/normal_100"
                app:boxCornerRadiusTopEnd="@dimen/normal_100"
                app:boxCornerRadiusBottomStart="@dimen/normal_100"
                app:boxCornerRadiusBottomEnd="@dimen/normal_100"
                app:boxCornerRadiusTopStart="@dimen/normal_100"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCitizenship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textColorHint="@color/gray"
                    android:hint="@string/citizenship"
                    app:errorEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPassportNumber"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/light_gray"
                android:layout_marginTop="@dimen/normal_100"
                app:boxCornerRadiusTopEnd="@dimen/normal_100"
                app:boxCornerRadiusBottomStart="@dimen/normal_100"
                app:boxCornerRadiusBottomEnd="@dimen/normal_100"
                app:boxCornerRadiusTopStart="@dimen/normal_100"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPassportNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textColorHint="@color/gray"
                    android:hint="@string/passport_name"
                    app:errorEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPassportValidity"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/light_gray"
                android:layout_marginTop="@dimen/normal_100"
                app:boxCornerRadiusTopEnd="@dimen/normal_100"
                app:boxCornerRadiusBottomStart="@dimen/normal_100"
                app:boxCornerRadiusBottomEnd="@dimen/normal_100"
                app:boxCornerRadiusTopStart="@dimen/normal_100"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPassportValidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/normal_100"
                    android:textColorHint="@color/gray"
                    android:hint="@string/passport_validity"
                    app:errorEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

